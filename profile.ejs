                        <h4>Blockchain Voting App</h4>
                        <p>Role: üßë‚Äçüè´ Mentor</p>
                    </div>
                    <div class="card idea-card">
                        <h4>Smart Irrigation</h4>
                        <p>Role: üí∏ Donor</p>
                    </div>
                </div>
            </div>
        </section>

        <div class="modal" id="edit-profile-modal">
            <div class="modal-content card">
                <h2>Edit Profile</h2>
                <form>
                    <label for="name">Name</label>
                    <input type="text" id="name" value="Jane Doe">
                    <label for="role">Role</label>
                    <input type="text" id="role" value="Student | Computer Science">
                    <label for="bio">Bio</label>
                    <textarea id="bio">Passionate about solving real-world problems through AI and education.</textarea>
                    <label for="email">Email</label>
                    <input type="email" id="email" value="jane.doe@example.com">
                    <label for="location">Location</label>
                    <input type="text" id="location" value="Bengaluru, India">
                    <button type="submit" class="btn btn-primary save-btn">Save</button>
                    <button type="button" class="btn btn-secondary close-btn">Cancel</button>
                </form>
            </div>
        </div>
    </main>

    <footer>
        <p>&copy; 2025 IdeaNest. All rights reserved. <a href="#">Privacy Policy</a></p>
    </footer>

    <script>
        const editBtn = document.querySelector('.edit-btn');
        const modal = document.getElementById('edit-profile-modal');
        const closeBtn = document.querySelector('.close-btn');
        editBtn.addEventListener('click', () => {
            modal.style.display = 'flex';
        });
        closeBtn.addEventListener('click', () => {
            modal.style.display = 'none';
        });
        modal.addEventListener('click', (e) => {
            if (e.target === modal) modal.style.display = 'none';
        });
    </script>
</body>
</html>