  <script>
    const API_KEY = '185a565fbbd84517aef7c1ed1ba415d4'; // Replace with your actual API key

    let chatHistory = [{
      role: "system",
      content: "I am IdeaNest Assistant, helping students submit ideas, connect with mentors, find funding, and track progress. Guide users on idea submission, mentor registration, SDG tagging, and platform features. Keep responses clear, concise, and action-oriented. Direct users to appropriate resources and APIs as needed."
    }, {
      role: "user",
      content: "Provide clear, concise, and actionable responses to users about the platform's features, guiding them in submitting ideas, connecting with mentors, finding funding opportunities, and utilizing the SDG tagging system. Ensure responses align with Sustainable Development Goals (SDGs), suggest relevant tags, and direct users to appropriate platform actions (e.g., submitting ideas, mentor registration). If a request is unclear, ask for clarification to ensure accurate assistance."
    }];

    async function sendMessage() {
      const userInput = document.getElementById('userInput');
      const message = userInput.value.trim();
      if (!message) return;

      appendMessage(message, 'user');
      userInput.value = '';

      const typingIndicator = appendMessage('Typing...', 'bot');

      try {
        const response = await fetch(`https://api.aimlapi.com/v1/chat/completions`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json', 'Authorization': `Bearer ${API_KEY}` },
          body: JSON.stringify({
            model: "gpt-4o",
            messages: chatHistory.concat([{ role: "user", content: message }])
          })
        });

        const data = await response.json();
        const botResponse = data.choices[0].message.content;

        chatHistory.push({ role: "user", content: message }, { role: "assistant", content: botResponse });

        typingIndicator.remove();
        appendMessage(botResponse, 'bot');
      } catch (error) {
        typingIndicator.remove();
        appendMessage('Sorry, I encountered an error. Please try again.', 'bot');
      }
    }

    function appendMessage(text, sender) {
      const messagesDiv = document.getElementById('chatMessages');
      const messageDiv = document.createElement('div');
      messageDiv.classList.add('message', sender);
      messageDiv.textContent = text;
      messagesDiv.appendChild(messageDiv);
      messagesDiv.scrollTop = messagesDiv.scrollHeight; // Scroll to bottom
      return messageDiv;
    }

    function toggleChat() {
      const chatWindow = document.getElementById('chatWindow');
      chatWindow.style.display = chatWindow.style.display === 'none' || !chatWindow.style.display ? 'flex' : 'none';
    }

    $("#whatsappBtn").click(function () {
      const userMessage = $("#userMessage").val().trim();
      if (userMessage === "") {
        alert("Please type a message before sending.");
        return;
      }

      $.ajax({
        url: "/sendWhatsApp",
        method: "POST",
        data: { userMessage },
        success: function (response) {
          alert("✅ Message sent successfully!");
          $("#userMessage").val("");
        },
        error: function () {
          alert("❌ Failed to send message.");
        },
      });
    });
  </script>
